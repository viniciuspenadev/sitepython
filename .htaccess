# Arquivo principal
DirectoryIndex index.php

# Habilitar rewrite
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Forçar HTTPS (compatível com proxy reverso)
     RewriteCond %{HTTP:X-Forwarded-Proto} !https
     RewriteCond %{HTTPS} off [OR]
     RewriteCond %{HTTP:X-Forwarded-Proto} =""
     RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # Prevenir acesso a pastas de sistema
    RewriteRule ^backlog/ - [F,L]
    RewriteRule ^includes/ - [F,L]
    
    # =========================================
    # URLs Amigáveis (Remover .php)
    # =========================================
    
    # Redirect URLs antigas em português para inglês (SEO - 301)
    RewriteRule ^servicos_aereo(.*)$ air-freight$1 [R=301,L]
    RewriteRule ^servicos_maritimo(.*)$ ocean-freight$1 [R=301,L]
    
    # Redirecionar URLs antigas com .php para URLs sem extensão (SEO - 301)
    RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.php [NC]
    RewriteCond %{REQUEST_FILENAME} !index.php
    RewriteRule ^ %1 [R=301,L,QSA]
    
    # Reescrever URLs sem extensão para .php (interno)
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME}\.php -f
    RewriteRule ^([^/]+)/?$ $1.php [L,QSA]
</IfModule>

# Compressão Gzip
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript application/json
</IfModule>

# Cache de arquivos estáticos
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# Prevenir listagem de diretórios
Options -Indexes

# Proteção de arquivos sensíveis
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>
